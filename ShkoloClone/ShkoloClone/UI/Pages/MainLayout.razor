@using RazorConsole.Components
@using Spectre.Console
@using Grid = RazorConsole.Components.Grid
@using Markup = RazorConsole.Components.Markup
@using Padder = RazorConsole.Components.Padder
@using Panel = RazorConsole.Components.Panel
@inherits LayoutComponentBase

<Panel Expand="true">
    <Grid Columns="2" Expand="true">
        <Padder Padding="@(new (1, 1, 1, 1))">
        </Padder>
        <Padder Padding="@(new(0,1,0,0))">
            @Body
        </Padder>
    </Grid>
</Panel>
<Newline />
<Markup Content="Press Tab to change focus • Press Enter to click • Press Ctrl+C to exit" Foreground="@Color.Grey58" />